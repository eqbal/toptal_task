<div>
  <%= simple_form_for(@entry, :html => {:class => 'form-vertical' }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :distance, hint: "In Meteres" %>
      <%= f.input :time_period, hint: "In Minutes" %>
      <%= f.input :date_time %>
    </div>

    <br/>
    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>  
</div>


