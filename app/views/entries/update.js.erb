$('#myModal').modal('hide');

<% if @updated %>  
  $("#entry_<%= @entry.id %>").replaceWith("<%= j render @entry %>")
  $("#entry_<%= @entry.id %>").effect("highlight", {}, 1500);
<% else %>
  $("#errors").html("<%= j render 'error', resource: @entry %>");
  $("#errors").effect("highlight", {}, 1500);
<% end %>
