<h4>Entries</h4>

<div class="text-center">
  <p><%= page_entries_info @entries %></p>
  <%= paginate @entries %>
</div>

<div class="well">
  <div id="entry-form">
    <%= render 'form' %>    
  </div>  
</div>


<hr>

<table class="table table-striped">
  
    <tr>
      <th>Distance</th>
      <th>Time period</th>
      <th>Date time</th>
      <th>Created at</th>      
      <th></th>
    </tr>
  

  
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.distance %> <small><%= entry.readable_distance_type %></small></td>
        <td><%= entry.time_period %></td>
        <td><%= entry.date_time %></td>
        <td><%= time_ago_in_words(entry.created_at) %></td>        
        <td class="actions-cell">
          <%= link_to 'Show', entry, :class => "btn btn-sm btn-info" %>
          <%= link_to 'Edit', edit_entry_path(entry), :class => "btn btn-sm btn-primary" %>
          <%= link_to 'X', entry, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  
</table>

<br>

<div class="text-center">
  <p><%= page_entries_info @entries %></p>
  <%= paginate @entries %>
</div>
